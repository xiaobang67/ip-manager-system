# IPAM系统环境配置 - Linux环境
# Production Environment Configuration for Linux

# ===========================================
# 应用程序配置
# ===========================================
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# ===========================================
# 数据库配置
# ===========================================
MYSQL_ROOT_PASSWORD=root_pass123
MYSQL_DATABASE=ipam
MYSQL_USER=ipam_user
MYSQL_PASSWORD=ipam_pass123
MYSQL_PORT=3306

# ===========================================
# Redis配置
# ===========================================
REDIS_PORT=6379

# ===========================================
# 安全配置
# ===========================================
SECRET_KEY=your_very_strong_secret_key_change_this_in_production_min_32_chars
JWT_SECRET_KEY=your_very_strong_jwt_secret_key_change_this_in_production
JWT_EXPIRE_MINUTES=30

# ===========================================
# 服务端口配置
# ===========================================
FRONTEND_PORT=80
FRONTEND_HTTPS_PORT=443
BACKEND_PORT=8000
NGINX_HTTP_PORT=8080
NGINX_HTTPS_PORT=8443

# ===========================================
# CORS配置
# ===========================================
CORS_ORIGINS=http://localhost,http://localhost:3000,http://localhost:5173,https://yourdomain.com

# ===========================================
# 备份配置
# ===========================================
BACKUP_RETENTION_DAYS=30